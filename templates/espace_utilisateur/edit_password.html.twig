{% extends 'vendeur.html.twig' %}

{% block title %}Mettre à jour votre mot de passe
{% endblock %}

{% block bg %}{% endblock %}

{% block colleft %}4
{% endblock %}

{% block colright %}8
{% endblock %}

{% block sidebar %}

	{% include "espace_utilisateur/composants/_sidebar_avatar.html.twig" %}

	{{ parent() }}
	
{% endblock %}

{% block body %}

	{{ form_start(resetForm) }}

	<div class="box shadow-sm rounded bg-white mb-3">
		<div class="box-title border-bottom p-3">
			<h6 class="m-0">Mettre à jour votre mot de passe</h6>
		</div>
		<div class="box-body p-3">
			<div class="form-group row">
				<div class="col-sm-4 col-form-label">
               <label for="">NOUVEAUX ACCES</label>
               <p>Vous serez automatiquement déconnecter après avoir mis à jour vos accès</p>
            </div>
				<div class="col-sm-8">
					{{ form_row(resetForm.plainPassword) }}
				</div>
			</div>
			<div class="form-group row">
				<div class="col-sm-8">
					<button type="submit" class="btn btn-primary">Mettre à jour votre mot de passe</button>
				</div>
			</div>
		</div>
	</div>

	{{ form_end(resetForm) }}

{% endblock %}
