{{ form_start(form) }}

<div class="box shadow-sm rounded bg-white mb-3">
   <div class="box-title border-bottom p-3">
      <h6 class="m-0">Profil utilisateur</h6>
   </div>
   <div class="box-body p-3">
      <div class="form-group row">
         <label for="inputEmail3" class="col-sm-2 col-form-label">Nom</label>
         <div class="col-sm-10">
            {{ form_row(form.nom) }}
         </div>
      </div>
      <div class="form-group row">
         <label for="inputPassword3" class="col-sm-2 col-form-label">Prénom</label>
         <div class="col-sm-10">
            {{ form_row(form.prenom) }}
         </div>
      </div>
      <fieldset class="form-group">
         <div class="row">
            <legend class="col-form-label col-sm-2 pt-0">Genre</legend>
            <div class="col-sm-10">
               {{ form_row(form.genre) }}
            </div>
         </div>
      </fieldset>
      <div class="form-group row">
         <label for="inputPassword3" class="col-sm-2 col-form-label">Image de profil</label>
         <div class="col-sm-6">
            {{ form_row(form.imageFile) }}
         </div>
      </div>
      <div class="form-group row">
         <label for="inputPassword3" class="col-sm-2 col-form-label">Email</label>
         <div class="col-sm-10">
            {{ form_row(form.email) }}
         </div>
      </div>
      <div class="form-group row">
         <label for="inputPassword3" class="col-sm-2 col-form-label">Pays</label>
         <div class="col-sm-10">
            {{ form_row(form.pays) }}
         </div>
      </div>
      <div class="form-group row">
         <label for="inputPassword3" class="col-sm-2 col-form-label">Ville</label>
         <div class="col-sm-10">
            {{ form_row(form.ville) }}
         </div>
      </div>
      <div class="form-group row">
         <label for="inputPassword3" class="col-sm-2 col-form-label">Coordonnées</label>
         <div class="col-sm-10">
            <div class="row">
               <div class="col-sm-6">
                  {{ form_row(form.adresse) }}
               </div>
               <div class="col-sm-6">
                  {{ form_row(form.telephone) }}
               </div>
            </div>
         </div>
      </div>
      <div class="form-group row">
         <label for="inputPassword3" class="col-sm-2 col-form-label">A propos</label>
         <div class="col-sm-10">
            {{ form_row(form.apropos) }}
         </div>
      </div>
      <div class="form-group row">
         <div class="col-sm-2">Checkbox</div>
         <div class="col-sm-10">
            <div class="form-check">
               <input class="form-check-input" type="checkbox" id="gridCheck1">
               <label class="form-check-label" for="gridCheck1">
                  Example checkbox
               </label>
            </div>
         </div>
      </div>
      <div class="form-group row">
         <div class="col-sm-10">
            <button type="submit" class="btn btn-success">Mettre à jour</button>
         </div>
      </div>
   </div>
</div>

{{ form_end(form) }}
