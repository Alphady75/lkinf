{% extends 'vendeur.html.twig' %}

{% block title %}Mes services {% endblock %}

{% block bg %}right{% endblock %}

{% block filters %}
{{ include('vendeur/microservices/_filter.html.twig') }}
{% endblock %}

{% block body %}

<div class="row pb-4">
    <div class="col-sm-6">
        <h2 class="h5 mb-3">Mes services</h2>
    </div>
    <div class="col-sm-6 text-right">
        <a href="{{ path('vendeur_microservices_new') }}" class="btn btn-success">Nouveau service</a>
    </div>
</div>
<div class="recommended">
    <div class="row">
        {% for microservice in microservices %}
        <div class="col-md-12">
            <div class="d-flex align-items-center py-3 mb-3 bg-white rounded shadow-sm">
                <div class="col-sm-4">
                    {% if microservice.medias|length > 0 %}

                    <img class="img-fluid rounded"
                        src="{{ vich_uploader_asset(microservice.medias[0], 'imageFile') | imagine_filter('medium_size') }}" />

                    {% else %}

                    <img class="img-fluid rounded"
                        src="{{ asset('themes/base/images/list/v1.png') | imagine_filter('medium_size') }}" />

                    {% endif %}
                </div>
                <div class="col-sm-8">
                    <p class="h6 mb-1">{{ microservice.name }}</p>
                    <p class="text-muted m-0">Discover the do’s and don’ts to ensure you’re always on the right track.
                    </p>

                    <div class="content-info py-3">
                        <a href="{{ path('vendeur_microservices_show', {'id': microservice.id}) }}"
                            class="btn btn-light">Details</a>
                        <a href="{{ path('vendeur_microservices_galerie', {'id': microservice.id}) }}"
                            class="btn btn-light"><i class="fa fa-image"></i> Galerie</a>
                        <a href="{{ path('vendeur_microservices_edit', {'id': microservice.id}) }}"
                            class="btn btn-secondary">Modifier</a>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-md-4">
            <div class="py-3">
                <p class="text-muted">Aucun service</p>
                <a href="{{ path('vendeur_microservices_new') }}">Nouveau service</a>
            </div>
        </div>
        {% endfor %}
    </div>

    <div class="py-3">
        {{ knp_pagination_render(microservices) }}
    </div>
</div>

{% endblock %}